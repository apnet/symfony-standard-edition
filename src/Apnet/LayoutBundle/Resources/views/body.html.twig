<!DOCTYPE html>
<html lang="en">
<head>
    {% block head %}
        <meta charset="utf-8"/>
        <title>{% block title %}{% endblock %}</title>
        <meta name="viewport" content="{% block meta_viewport %}width=device-width, initial-scale=1.0{% endblock %}"/>
        <meta name="description" content="{% block meta_description %}{% endblock %}"/>
        <meta name="keywords" content="{% block meta_keywords %}{% endblock %}"/>

        {% block stylesheets %}
            {% stylesheets
            '%kernel.root_dir%/../vendor/twitter/bootstrap/docs/assets/css/bootstrap.css'
            '%kernel.root_dir%/../vendor/twitter/bootstrap/docs/assets/css/bootstrap-responsive.css'
            '@ApnetLayoutBundle/Resources/public/css/style.css'
            filter="yui_css" %}
            <link rel="stylesheet" href="{{ asset_url }}"/>
            {% endstylesheets %}

            <!--[if lt IE 9]>
            {% javascripts
            '%kernel.root_dir%/../vendor/twitter/bootstrap/docs/assets/js/html5shiv.js'
            %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
            <![endif]-->
        {% endblock %}
    {% endblock %}
</head>

<body>

{% block body %}{% endblock %}

{% block javascripts %}
    {% javascripts
    '%kernel.root_dir%/../vendor/twitter/bootstrap/docs/assets/js/jquery.js'
    '%kernel.root_dir%/../vendor/twitter/bootstrap/docs/assets/js/bootstrap.js'
    filter="yui_js" %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

</body>
</html>
