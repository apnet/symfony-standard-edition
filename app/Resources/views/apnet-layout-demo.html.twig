{% extends "ApnetLayoutBundle::body.html.twig" %}

{% block title %}Hello, World!{% endblock %}

{% block stylesheets_core %}
    {{ parent() }}
    <style type="text/css">
        body { padding-top: 20px; padding-bottom: 20px; }
        .navbar { margin-bottom: 20px; }
    </style>
{% endblock %}

{% block body_wrapper %}<body role="document">{{ block('body') }}</body>{% endblock %}

{% block body_core %}
    <div class="container">
        <!-- Static navbar -->
        <div class="navbar navbar-default" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="https://github.com/apnet/symfony-standard-edition">Symfony2 SE</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Layout <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="https://github.com/apnet/LayoutBundle">Layout Bundle</a></li>
                                <li><a href="https://github.com/apnet/AsseticImporterBundle">AsseticImporter Bundle</a></li>
                                <li class="divider"></li>
                                <li class="dropdown-header">Assets</li>
                                <li><a href="https://github.com/apnet/jquery">jQuery</a></li>
                                <li><a href="https://github.com/apnet/bootstrap">Bootstrap</a></li>
                                <li><a href="https://github.com/apnet/html5shiv">html5shiv</a></li>
                            </ul>
                        </li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">QA <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="https://github.com/apnet/FunctionalTestBundle">FunctionalTest Bundle</a></li>
                                <li class="divider"></li>
                                <li><a href="https://github.com/covex-nn/phpqatools">PHP QA Tools</a></li>
                                <li><a href="https://github.com/apnet/coding-standard">Coding Style</a></li>
                            </ul>
                        </li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div><!--/.container-fluid -->
        </div>
        <!-- Main component for a primary marketing message or call to action -->
        <div class="jumbotron">
            <h1>Apnet Symfony2 SE</h1>
        </div>
    </div> <!-- /container -->
{% endblock %}
